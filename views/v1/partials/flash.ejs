<% if (messages.info) { %>
<div class="alert custom-alert alert-info alert-dismissible fade show my-0" role="alert">
  <div class="container">
    <% messages.info.forEach((info, i, arr) => { %>
      <div>
        <i class="fa fa-info" aria-hidden="true"></i>  
        <%= info.msg %>
      </div>
    <% }); %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
  </div>
</div>
<% } %>
<% if (messages.danger) { %>
<div class="alert custom-alert alert-danger alert-dismissible fade show my-0" role="alert">
  <div class="container">
    <% messages.danger.forEach((danger, i, arr) => { %>
      <div>
        <i class="fa fa-exclamation-circle" aria-hidden="true"></i>  
