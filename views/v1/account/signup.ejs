<div class="upload-form">
    <h2 class="mb-3">
        <small>Signup</small>
    </h2>
    <form
        class="container"
        style="padding: 0"
        action="/signup"
        enctype="multipart/form-data"
        method="POST"
    >
        <div class="custom-form-group">
            <label class="custom-form-label" for="name">Full Name *</label>
            <input type="text" class="custom-form-input" name="name" required />
        </div>

        <div class="drop-zone" style="height: 200px">
            <label class="custom-form-label" for="email">Picture *</label>
            <span class="drop-zone__prompt">
                <i class="fa fa-upload" aria-hidden="true"></i>
            </span>
            <input type="file" name="picture" class="custom-form-input drop-zone__input" required />
        </div>

        <div class="custom-form-group">
            <label class="custom-form-label" for="dob">Date-of-Birth</label>
            <input type="datetime-local" class="custom-form-input" name="dob" />
        </div>

        <div class="custom-form-group">
            <label class="custom-form-label" for="email">Email *</label>
            <input
                type="email"
                data-qa="txtEmail"
                class="custom-form-input"
                name="email"
                required
            />
        </div>

        <div class="custom-form-group">
            <label class="custom-form-label" for="password">Password *</label>
            <input type="password" class="custom-form-input" name="password" required />
        </div>

        <div>
            <input id="s1" type="checkbox" class="switch" name="visibility" checked />
            <label for="s1">Would you like keep your profile public</label>
        </div>

        <div class="mt-3">
            <input id="r1" type="radio" name="theme" value="1" checked />
            <label for="r1" class="mr-3">Light Theme</label>
            <input id="r2" type="radio" name="theme" value="2" />
            <label for="r2">Dark Theme</label>
        </div>

        <div class="mt-3">
            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title=""> </span>
            <button
                class="btn btn-dark my-3 doc-upload-btn"
                title=""
                data-toggle="popover"
                data-trigger="hover"
                data-placement="bottom"
                data-content="* fields are mendatory"
                type="submit"
            >
                Signup
            </button>
            <input
                class="btn btn-dark my-3 doc-upload-btn"
                data-toggle="popover"
                data-trigger="hover"
                data-placement="bottom"
                data-content="reset the input fields"
                type="reset"
            />
        </div>
    </form>
    <div class="mt-3 center">
        <small class="center">
            <div style="color: #6d758d">
                Signup with
            </div>
        </small>
    </div>
    <%- include('../partials/oauth') %>
</div>
